model User{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  userName String @unique
  password String
  firstName String
  lastName String
  isAgreed Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 

  @@map("users")
}