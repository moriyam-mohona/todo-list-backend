model User {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  email      String     @unique
  userName   String     @unique
  password   String
  firstName  String
  lastName   String
  contactNo  String?
  position   String?
  isAgreed   Boolean    @default(false)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  tasks      Task[]
  priorities Priority[]
  statuses   Status[]

  @@map("users")
}

model Task {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  date        DateTime
  description String
  priorityId  String   @db.ObjectId
  priority    Priority @relation(fields: [priorityId], references: [id])
  statusId    String   @db.ObjectId
  status      Status   @relation(fields: [statusId], references: [id])
  userId      String?  @db.ObjectId
  user        User?    @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("task")
}

model Priority {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String @unique
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])
  tasks  Task[]

  @@unique([name, userId])
  @@map("priorities")
}

model Status {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  tasks     Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, userId])
  @@map("statuses")
}
